<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo List</title>
  <link rel="stylesheet" href="css/styles.css">
</head>
<body>
  <div class="box">
    <h1>Todo-list</h1>
  </div>

  <div class="box">
<form action="/" method="POST" class="add-form">
      <input type="text" name="newItem" placeholder="Enter your task" required>
      <select name="priority" required>
        <option value="High">High</option>
        <option value="Medium" selected>Medium</option>
        <option value="Low">Low</option>
      </select>
      <button type="submit" class="add-btn">+</button>
 </form>
 <% ros.forEach(function(task) { %>
      <div class="items" data-id="<%= task._id %>">
        <input type="checkbox">
        <p class="task-name"><%= task.name %></p>
        <span class="priority <%= (task.priority || "Medium").toLowerCase() %>">
  <%= task.priority || "Medium" %>
</span>

        <div class="btn-container">
          <button type="button" class="edit-btn" onclick="startEdit('<%= task._id %>')">Edit</button>
          <button type="button" class="delete-btn" onclick="submitDelete('<%= task._id %>')">Delete</button>
        </div>
      </div>
    <% }); %>
  </div>
<script>
  function startEdit(id) {
    let task = document.querySelector(`[data-id="${id}"] .task-name`);
    let newName = prompt("Edit task:", task.textContent);
    if (newName && newName.trim()) {
        fetch(`/${id}?_method=PUT`, {
  method: "POST",headers: {"Content-Type":"application/x-www-form-urlencoded"}, body: "name=" + encodeURIComponent(newName.trim())
        }).then(() => location.reload());}}
function submitDelete(id) {
    if (!confirm("Delete this task?")) return;
    fetch("/" + id + "?_method=DELETE", { method: "POST" }).then(()=>location.reload());
  }
</script>

</body>
</html>
